<?xml version="1.0"?>
<tool_dependency>
    <package name="featurecounts" version="1.4.6.p1">
        <repository name="package_featurecounts_1_4_6" owner="yhoogstrate" prior_installation_required="False" />
    </package>

    <package name="featurecounts2bed" version="1.0.0">
        <install version="1.0">
            <actions>
                <action type="shell_command"><![CDATA[
                    mkdir $INSTALL_DIR/bin                                            &&
                    cp $REPOSITORY_INSTALL_DIR/featurecounts2bed.sh $INSTALL_DIR/bin/
                    ]]></action>
                <action type="chmod">
                    <file mode="755">$INSTALL_DIR/bin/featurecounts2bed.sh</file>
                </action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                    <environment_variable name="PATH" action="prepend_to">$REPOSITORY_INSTALL_DIR</environment_variable>
                </action>
            </actions>
        </install>
    </package>
</tool_dependency>
